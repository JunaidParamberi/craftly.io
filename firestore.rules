rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'super_admin' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SUPER_ADMIN'
      );
    }

    // Checks if the user belongs to the specified companyId.
    // Tries to use the Auth Token claim first (performant), falls back to checking the User document.
    function belongsToCompany(companyId) {
      return isAuthenticated() && (
        request.auth.token.companyId == companyId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId
      );
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // Users can read their own profile.
      // Users can list other users in the SAME company.
      allow get: if isAuthenticated() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isAuthenticated() && (
        isSuperAdmin() || 
        belongsToCompany(resource.data.companyId)
      );
      
      // Allow users to create or update their own profile document.
      allow create, update: if isAuthenticated() && (request.auth.uid == userId || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }
    
    // Public Invoice Access (no auth required for public invoices)
    match /invoices/{invoiceId} {
      // Allow public read access (both get and list) for invoices with isPublic = true
      // OR authenticated access for company members
      // For list queries: resource.data will be checked for each document returned
      // For get: resource will be the document being read
      allow read: if 
        // Public access (no auth required)
        (resource != null && resource.data.isPublic == true) ||
        // Authenticated access: company members can access their invoices
        (isAuthenticated() && (
          isSuperAdmin() || (
            resource != null && belongsToCompany(resource.data.companyId)
          )
        ));
      
      // Update and delete require authentication
      allow update, delete: if isAuthenticated() && (
        isSuperAdmin() || (
          resource != null && belongsToCompany(resource.data.companyId)
        )
      );
      
      // CREATE with public access setup
      allow create: if isAuthenticated() && (
        isSuperAdmin() || (
          request.resource != null && belongsToCompany(request.resource.data.companyId)
        )
      );
    }
    
    // Multi-tenant ERP Data Scoping (for other collections)
    match /{collectionName}/{docId} {
      // Skip invoices as they're handled above
      allow read, update, delete: if collectionName != 'invoices' && (
        isSuperAdmin() || (
          resource != null && belongsToCompany(resource.data.companyId)
        )
      );

      allow create: if collectionName != 'invoices' && (
        isSuperAdmin() || (
          request.resource != null && belongsToCompany(request.resource.data.companyId)
        )
      );
    }

    match /pending_invites/{token} {
      allow read: if true; // Needed to verify invite before signup
      allow write: if isSuperAdmin();
    }

    match /mail/{mailId} {
      // Basic mail permissions for the Email Module
      allow read: if isAuthenticated() && (
        resource.data.to == request.auth.token.email || 
        resource.data.metadata.senderId == request.auth.uid ||
        isSuperAdmin()
      );
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        resource.data.metadata.senderId == request.auth.uid || 
        isSuperAdmin()
      );
    }
  }
}